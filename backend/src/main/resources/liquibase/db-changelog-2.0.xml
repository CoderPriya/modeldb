<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
        logicalFilePath="src/main/resources/liquibase/db-changelog-2.0.xml">

    <changeSet author="anandJ" id="C1">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="C1"/>
            </not>
        </preConditions>
        <createTable tableName="C1">
            <column name="id" type="int8" autoIncrement="true" incrementBy="1">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="C1"/>
        </rollback>
    </changeSet>

    <changeSet id="db_version_1.1" author="anandJ">
        <tagDatabase tag="db_version_1.1"/>
    </changeSet>

    <changeSet author="anandJ" id="C2">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="C2"/>
            </not>
        </preConditions>
        <createTable tableName="C2">
            <column name="id" type="int8" autoIncrement="true" incrementBy="1">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="C2"/>
        </rollback>
    </changeSet>

    <changeSet author="anandJ" id="C3">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="C3"/>
            </not>
        </preConditions>
        <createTable tableName="C3">
            <column name="id" type="int8" autoIncrement="true" incrementBy="1">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="C3"/>
        </rollback>
    </changeSet>

    <changeSet id="db_version_1.2" author="anandJ">
        <tagDatabase tag="db_version_1.2"/>
    </changeSet>

    <changeSet id="C4" author="anandJ" failOnError="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="C3" columnName="dummy_column"/>
            </not>
        </preConditions>
        <addColumn tableName="C3">
            <column name="dummy_column" type="int8"/>
        </addColumn>
        <rollback>
            <dropColumn tableName="C3" columnName="dummy_column"/>
        </rollback>
    </changeSet>

    <changeSet id="db_version_1.3" author="anandJ">
        <tagDatabase tag="db_version_1.3"/>
    </changeSet>

    <changeSet author="anandJ" id="fk_k1">
        <preConditions onFail="MARK_RAN">
            <not>
                <foreignKeyConstraintExists foreignKeyTableName="C3" foreignKeyName="c3_fk_dummy_column"/>
            </not>
        </preConditions>
        <!--Artifact table foreign key constraints-->
        <addForeignKeyConstraint baseColumnNames="dummy_column"
                                 baseTableName="C3"
                                 constraintName="c3_fk_dummy_column"
                                 referencedColumnNames="id"
                                 referencedTableName="C2"/>
    </changeSet>

    <changeSet id="db_version_1.4" author="anandJ">
        <tagDatabase tag="db_version_1.4"/>
    </changeSet>

    <changeSet author="anandJ" id="C3_temp">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="C3_temp"/>
            </not>
        </preConditions>
        <createTable tableName="C3_temp">
            <column name="id" type="int8" autoIncrement="true" incrementBy="1">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="dummy_column" type="int8"/>
        </createTable>
        <rollback>
            <dropTable tableName="C3_temp"/>
        </rollback>
    </changeSet>

    <changeSet id="copyDataToATempTable_C3_temp" author="anandJ">
        <sql>
            INSERT INTO C3_temp SELECT * FROM C3;
        </sql>
        <rollback>
            <sql>
                delete from C3_temp;
            </sql>
        </rollback>
    </changeSet>

    <changeSet id="db_version_1.5" author="anandJ">
        <tagDatabase tag="db_version_1.5"/>
    </changeSet>

</databaseChangeLog>
